{
  "strategy": "pr-first",
  "sourceRepo": "foundation",
  "targets": [
    { "repo": "mvp", "branch": "master", "paths": ["docs", "automation"], "exclude": ["logs", "artifacts"] },
    { "repo": "production", "branch": "master", "paths": ["control-plane", "helm", "k8s"], "exclude": ["experiments"] },
    { "repo": "enterprise", "branch": "master", "paths": ["policies", "ci", "runbooks"], "exclude": ["experiments"] }
  ],
  "filters": {
    "fileExtensions": [".ts", ".js", ".md", ".yaml", ".yml"],
    "maxFileSizeKB": 2560
  },
  "commitTemplate": "chore(sync): propagate {count} changes from foundation"
}
{
  "source": "InfinityXOneSystems/foundation",
  "targets": [
    "InfinityXOneSystems/mvp",
    "InfinityXOneSystems/production",
    "InfinityXOneSystems/enterprise"
  ],
  "strategy": {
    "mode": "pr-first",
    "conflicts": "manual",
    "filters": {
      "include": ["src/**", "docs/**", "policies/**"],
      "exclude": ["logs/**", "experiments/**"]
    }
  }
}
