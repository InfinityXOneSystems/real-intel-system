{
  "name": "infinity-gateway",
  "version": "1.0.0",
  "description": "Gateway service for Infinity X Systems - MVL deployment with Firestore VDB integration",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "ts-node src/main.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "docker:build": "docker build -t infinity-gateway:latest .",
    "docker:run": "docker run -p 3000:3000 infinity-gateway:latest"
  },
  "keywords": [
    "gateway",
    "orchestration",
    "vdb",
    "firestore",
    "railway",
    "mvl"
  ],
  "author": "InfinityXOneSystems",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "@google-cloud/firestore": "^7.1.0",
    "firebase-admin": "^12.0.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@types/jest": "^29.5.11"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=11.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/InfinityXOneSystems/foundation.git"
  }
}
