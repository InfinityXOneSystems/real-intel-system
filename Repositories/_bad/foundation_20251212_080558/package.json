{
  "name": "foundation",
  "version": "1.0.0",
  "description": "This is the entrypoint for fully automated, auditable, and safe orchestration of the Infinity X system.",
  "main": "auto-orchestrator.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "ts-node src/orchestrator/smart-router.ts",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "sync:secrets": "ts-node scripts/sync-secrets-cli.ts both",
    "sync:secrets:push": "ts-node scripts/sync-secrets-cli.ts push",
    "sync:secrets:pull": "ts-node scripts/sync-secrets-cli.ts pull",
    "sync:secrets:mobile": "ts-node scripts/sync-secrets-cli.ts mobile",
    "api:mobile": "ts-node src/server/copilot-mobile-api.ts",
    "api:dev": "npm run api:mobile",
    "setup:all-repos": "ts-node scripts/setup-secrets-all-repos.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@jest/globals": "^30.0.0",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "googleapis": "^166.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "octokit": "^5.0.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/__tests__/**",
      "!src/**/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
