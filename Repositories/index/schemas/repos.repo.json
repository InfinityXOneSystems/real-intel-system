{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RepoList",
  "type": "object",
  "properties": {
    "repos": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "repo", "stage", "domain", "tier", "status", "owner"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "repo": { "type": "string" },
          "stage": { "type": "integer", "minimum": 0, "maximum": 5 },
          "domain": { "type": "string" },
          "tier": { "type": "integer", "minimum": 0 },
          "status": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "owner": { "type": "string" },
          "languages": { "type": "array", "items": { "type": "string" } },
          "runtime": { "type": "string" },
          "entrypoints": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": { "type": "string" },
                "url": { "type": "string" },
                "routes": { "type": "array", "items": { "type": "string" } }
              }
            }
          },
          "datastores": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": { "type": "string" },
                "name": { "type": "string" }
              }
            }
          },
          "dependencies": {
            "type": "object",
            "properties": {
              "internal": { "type": "array", "items": { "type": "string" } },
              "external": { "type": "array", "items": { "type": "string" } }
            }
          }
        }
      }
    }
  },
  "required": ["repos"]
}
